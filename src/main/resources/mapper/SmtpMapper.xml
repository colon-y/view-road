<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="view.road.model.dao.mapper.SmtpMapper">
 
  
   <update id="smtpUpdate">
    UPDATE tbl_smtp
		SET emailName=#{emailName}, host=#{host}, username=#{username}, password=#{password},  modifiedDate=current_timestamp()
	WHERE sid=1   
   </update>
  
  
  	<select id="getSmtpInfo" resultType="view.road.model.vo.SmtpVO">
  		SELECT * FROM tbl_smtp WHERE sid=1   
  	</select>
  	
  	
  
</mapper>





